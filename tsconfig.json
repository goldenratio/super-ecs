{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "esModuleInterop": true,
    "allowJs": false,
    "declarationDir": "./dist/types",
    "declaration": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src"
  ]
}
