{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [ "ESNext", "DOM" ],
    "target": "esnext",
    "outDir": "js",
    "declarationDir": "dist/types",
    "declaration": true,
    // rules
    "strict": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true
  },
  "include": [
    "./src"
  ]
}
